####
# GNU Screen Configuration for s-labb-ngs02
####
# +AMDG
#Turn off splash screen
startup_message off
# avoid screen conflicting with vi bindings; basically,
# whenever it sees "escape", screen waits for more
# characters, and only passes the escape to the program
# after a short pause; this sets the pause to zero
maptimeout 0
defc1 off
# Change the number of scrollback lines
vbell on
altscreen on
#Increase scrollback from 100 to 15000
defscrollback 15000
# Ensure the default shell is the same as the $SHELL environment variable
shell -$SHELL
shelltitle "$STY bash"
# Configure status bar at the bottom of the terminal
termcapinfo xterm*|Eterm|mlterm "hs:ts=\E]0;:fs=\007:ds=\E]0;screen\007"
hardstatus off
hardstatus string "$USER@%H - [$STY] %n$%t %? [%h]%?"
caption always "%{u}%{=bu}%{r}$USER@%H%{-} %{y}[%n]%{-} %{w}[%l]%{-} %{g}%c:%s %d.%m.%Y%{-} %{c}| %?%-Lw%?%{Y}%n*%f %t%?(%u)%?%{c}%?%+Lw%?"
#caption always "%?%F%{-b bc}%:%{-b bb}%?%C|%D|%M %d|%H%?%F%{+u wb}%? %L=%-Lw%45>%{+b by}%n%f*%t%{-}%+Lw%-0<"

####
# KEYBINDINGS
####
# Make navigating between regions easier
bind s split
bind V split -v
bind h focus left
bind j focus down
bind k focus up
bind l focus right
bind z layout next
# Make resizing regions easier
bind = resize =
bind + resize +1
bind - resize -1


####
# Generate some tabs
####
screen -t "vim" 0 vim
screen -t "" 1
screen -t "" 2
screen -t "" 3

####
# LAYOUTS
####
#Maximized VIM
layout default
select 0
layout save default
#Splitscreen 1|3
layout new splitscreen
select 0
split -v
resize -v 85
focus right
select 3
split
focus down
select 1
resize 25
split
focus down
select 2
resize 25
focus left
layout save splitscreen
#Load default
layout select default
